<script id="template/typeahead/typeahead-popup.html" type="text/ng-template">
<div class="autocomplete" ng-style="{display: isOpen()&&'block' || 'none', top: position.top+'px', left: position.left+'px'}">
  <ul>
    <li ng-repeat="match in matches" ng-class="{active: isActive($index) }" ng-mouseenter="selectActive($index)" ng-click="selectMatch($index)">
      <typeahead-match index="$index" match="match.label.n" ></typeahead-match>
    </li>
  </ul>
</div>
</script>

<script type="text/ng-template" id="template/typeahead/typeahead-match.html ">
  <a tabindex="-1" >{{match}}</a>
</script>

<header>
  <div class="row">
    <div class="large-2 small-12 columns text-center">
        <a href="/" target="_self"><img src="assets/masthead/hot5-logo-simple.gif" width="140" height="64" alt="Hot5" /></a>
    </div>
    <div class="large-8 small-12 columns text-center">
      <form id="search" ng-submit="search()">
        <div class="large-4 small-12 columns text center">
           <input type="text" id="search" placeholder="Destination" class="search-icon" tabindex="1" ng-model="Page.info().query" typeahead="city for city in cities($viewValue)" autocomplete="off" typeahead-on-select='citySelect($item, $model, $label)' typeahead-editable="false"/>
<!--            <input type="hidden" ng-model="Page.info().slug">{{slug}}</input> -->
