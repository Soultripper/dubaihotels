<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	
	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
	
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	
	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>

  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
  <%= javascript_include_tag "application" %>
  

</head>
<body>
<!-- Requires Foundation 4 | visit http://foundation.zurb.com to download -->

<!-- Header and Nav -->
  <div class="full-row">
    <div class="large-12  columns">
      <div class="panel">
        <h1 class="center">Dubai Hotels</h1>
        <%= render "date_search" %>
      </div>
      <%= render 'nav' %>     
    </div>
  </div>
  <!-- End Header and Nav -->
  <div class="row">
    <!-- Nav Sidebar -->    
    <div class="large-2 columns "> 
      <%= render 'filters' %>
    </div>

    <!-- Main Feed -->
    <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
    <div class="large-6 columns "> 
      
      <%= render 'sort' %>

      <div class="row">
        <div class="large-12 columns "> 
          <% @hotels.each.with_index do |hotel, index| %>
            <%= render(partial: "search_result", locals:{hotel: hotel, last: index==@hotels.length-1}) if hotel.room_rate_details %>
          <% end %>
          <hr />
        </div>
      </div>

    </div>
 
    <!-- Right Sidebar -->
    <!-- On small devices this column is hidden -->
    <aside class="large-3 columns hide-for-small" id="js_right_bar">
      <ul class="city_list history">
        <% @hotels.take(20).each do |hotel| %>
          <% present(hotel, ExpediaHotelPresenter) do |presenter| %>
            <li class="item visitable bookmarkable" title="Ramada Jumeirah" data-item="1817055" data-path="549">
              <div class="info">
                <%= presenter.thumbnail_link %>
                <em><%= presenter.name %></em>
                <br>
                <div class="js_sidebaritem_rating">
                  <strong><%= presenter.rating %></strong>
                  <span class="img_sprite_moon stars cat4"><!-- --></span>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </aside>
 
  </div>
 
 
  <!-- Footer -->
 
  <footer class="row">
    <div class="large-12 columns">
      <hr />
      <div class="row">
        <div class="large-5 columns">
          <p>&copy; Copyright no one at all. Go to town.</p>
        </div>
        <div class="large-7 columns">
          <ul class="inline-list right">
            <li><a href="#">Section 1</a></li>
            <li><a href="#">Section 2</a></li>
            <li><a href="#">Section 3</a></li>
            <li><a href="#">Section 4</a></li>
            <li><a href="#">Section 5</a></li>
            <li><a href="#">Section 6</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>    
</body>
</html>

