    <% present(room, ExpediaRoomPresenter) do |presenter| %>
      <div class="row hotel_deal">
        <div class="large-12 columns">
          <a href="http://www.booking.com/searchresults.en-gb.html?city=-782831" class="js-external-deal" data-id="2421" data-name="Mina A Salam Madinat Jumeirah" data-provider="booking.com" data-price="638" data-price-total="638" data-currency="GBP" data-img="http://s.top10cdn.com/images/5931075/138/138" data-index="" data-stars="" data-room="Ocean Deluxe King Room" data-analytics="deals-table">
