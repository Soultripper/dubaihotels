h3 {
  color: #555555;
}
#wrapper #preferences {
  background-color: #eeeeee;
}
#wrapper #preferences .dropdown img {
  vertical-align: top;
  margin-top: 4px;
}
#wrapper > header #logo {
  display: block;
  background-image: url(<%= asset_path 'masthead/hot5-logo.gif' %>);
  -moz-background-size: cover;
  -o-background-size: cover;
  -webkit-background-size: cover;
  background-size: cover;
  width: 296px;
  height: 64px;
  margin-top: 10px;
  margin-bottom: 10px;
  font: 0/0 a;
  color: transparent;
  text-shadow: none;
  background-color: transparent;
  border: 0;
}
#wrapper #search input[readonly] {
  cursor: pointer;
}
#wrapper #search .input-group-btn button {
  height: 39px;
}
#wrapper > footer {
  background-color: #eb9100;
  padding: 10px 0;
  color: #fff;
}
#wrapper > footer .menu {
  list-style: none;
  margin: 0;
  padding: 0;
}
#wrapper > footer .menu li {
  display: inline-block;
  margin-right: 10px;
}
#wrapper > footer .menu li a {
  color: #fff;
}
#wrapper > footer .copyright {
  text-align: right;
}
@media (min-width: 992px) {
  #wrapper > footer {
    padding: 40px 0;
  }
}
@media (max-width: 768px) {
  #wrapper > header #logo {
    margin: 4px auto;
    width: 197.33333333px;
    height: 42.66666667px;
  }
  #wrapper #search .dates .col .input-group {
    width: 100%;
  }
  #wrapper #search .dates .col:first-child {
    padding-right: 5px;
  }
  #wrapper #search .dates .col:last-child {
    padding-left: 5px;
  }
  #wrapper .input-group-addon.addon-hidden-sm {
    display: none;
  }
  #wrapper > footer {
    font-size: 10px;
  }
  #wrapper > footer .menu {
    margin-bottom: 10px;
    text-align: center;
  }
  #wrapper > footer .copyright {
    text-align: center;
  }
}
